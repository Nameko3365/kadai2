<h1>Books</h1>
<div class=book-index >
  <div class=index-1>
    <p>Title</p>
    <% @books.each do |book| %>
    <p>
      <%= book.title %>
    </p>
    <% end %>
  </div>
    <div class=index-2>
    <p>Body</p>
    <% @books.each do |book| %>
    <p>
      <%= book.body %>
    </p>
  <% end %>
  </div>
  <div class=index-3>
  <p class=index-ki>機能</p>
    <% @books.each do |book| %>
    <div class=index-ul>
      <p class=index-p-1>
     <%= link_to "Show", book_path(book.id) %>
     </p>
     <p class=index-p>
     <%= link_to "Edit", edit_book_path(book.id) %>
     </p>
     <p class=index-p>
     <%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %>
     </p>
    </div>
    <% end %>
  </div>
</div>

<div class=index-4>
<h1>New book</h1>
<% if @book.errors.any? %>
  <%= @book.errors.count %>件のエラーが発生しました
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @book, url: '/books', method: :post do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Body</h4>
  <%= f.text_area :body %>
  <%= f.submit 'Create Book' %>
<% end %>
</div>